<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutdoorRentals.Mobile.RentalItemsPage"
             Title="Rental Items">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Label x:Name="HeaderLabel" FontSize="16" />

        <Button Text="Add Item" Clicked="OnAddClicked" />

        <CollectionView x:Name="ItemsList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding EquipmentName}" FontSize="16" />
                            <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}" Opacity="0.8" />
                            <Label Text="{Binding DailyRate, StringFormat='Rate/day: {0}'}" Opacity="0.8" />

                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Edit"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Delete"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="TotalLabel" FontSize="16" />

    </VerticalStackLayout>
</ContentPage>
