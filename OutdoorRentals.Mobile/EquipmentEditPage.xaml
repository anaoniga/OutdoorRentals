<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutdoorRentals.Mobile.EquipmentEditPage"
             Title="Equipment">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Name" />
            <Entry x:Name="NameEntry" Placeholder="Equipment name" />

            <Label Text="Description" />
            <Entry x:Name="DescriptionEntry" Placeholder="Optional" />

            <Label Text="Daily Rate" />
            <Entry x:Name="DailyRateEntry" Keyboard="Numeric" Placeholder="e.g. 25.5" />

            <Label Text="Stock Total" />
            <Entry x:Name="StockTotalEntry" Keyboard="Numeric" Placeholder="e.g. 10" />

            <Label Text="Stock Available" />
            <Entry x:Name="StockAvailableEntry" Keyboard="Numeric" Placeholder="e.g. 10" />

            <Label Text="Category" />
            <Picker x:Name="CategoryPicker"
                    Title="Select category"
                    ItemDisplayBinding="{Binding Name}" />

            <Button Text="Save" Clicked="OnSaveClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
