<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutdoorRentals.Mobile.Pages.CategoriesPage"
             Title="Categories">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Button Text="Go to Equipments"
                Clicked="OnGoEquipmentsClicked" />
        <Button Text="Go to Rentals" Clicked="OnGoRentalsClicked" />




        <Button Text="Add Category"
                Clicked="OnAddClicked" />

        <CollectionView x:Name="CategoriesList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding Name}" FontSize="16" />

                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Edit"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Delete"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
