<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutdoorRentals.Mobile.EquipmentsPage"
             Title="Equipments">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Button Text="Add Equipment"
                Clicked="OnAddClicked" />

        <CollectionView x:Name="EquipmentsList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding EquipmentCategoryName}" FontSize="13" Opacity="0.8" />
                            <Label Text="{Binding DailyRate, StringFormat='Daily rate: {0}'}"
                                   FontSize="13" Opacity="0.8" />

                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Edit"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Delete"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
